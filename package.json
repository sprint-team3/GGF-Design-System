    "stylelint-config-standard-scss": "^13.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{tsx,ts}": [
      "eslint --fix",
      "prettier --write"
